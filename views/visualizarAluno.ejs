                        <th>Turma</th>
                        <th>E-mail</th>
                    </tr>
                </thead>
                <tbody>
                    <% alunos.forEach(aluno => { %>
                        <tr>
                            <td><%= aluno.matricula %></td>
                            <td><%= aluno.nome %></td>
                            <td><%= aluno.turma %> </td>
                            <td><%= aluno.email %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </main>

